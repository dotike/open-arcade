{
   "service": "backendwoof",
   "description": "Backend service",
   "version": 1,
   "component_type": "k8s",
   "containers": [
      {
         "name": "backendwoof",
         "image": "okteto/hello-world:python",
         "readiness_check_path": "/env",
         "readiness_check_port": 8080,
         "cpu": 1,
         "cpu_limit": 2,
         "mem": 512,
         "mem_limit": 1024,
         "port_mappings": [
            {
              "port": 8080,
              "port_name": "http"
            }
         ]
      }
   ],
   "service_options": {
      "alerting": true,
      "desired_count": 1,
      "load_balanced": {
          "public": true,
          "private": true
      }
   },
   "application_config": {
      "custom_config": "this_comes_from_the_backend",
      "another_config": "woof"
   },
   "metadata": {
        "Service Name": "backendwoof",
        "Description": "A demo service to show how Arcade tooling works",
        "Owner": "IP TOOLS"
    }
}

